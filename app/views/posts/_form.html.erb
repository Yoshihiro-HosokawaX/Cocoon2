<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :description %>
  </div>
  <h3>Tag</h3>
  <div id="actions">
    <%= f.fields_for :tags do |tag| %>
      <%= render 'tag_fields', f: tag %>
    <% end %>
    <div id="links">

      <%= link_to_add_association 'add tag',f, :tags %>
    </div>
    <%= f.submit %>
  </div>
<% end %>
